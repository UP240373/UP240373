

# Ejemplos de variables en Python

first_name = 'Abdul'
last_name = 'Mtz Campos'
country = 'Mexico'
city = 'Aguascalientes'
age = 18
is_married = False
skills = ['HTML', 'CSS', 'JS', 'React', 'Python']
person_info = {
   'firstnama':'Abdul',
   'lastname':'Mtz Campos',
   'country':'Mexico',
   'city':'Ags'
   }



# Diferentes forma de utilizar las cadenas de caracteres 

print('Hello, World!') # Se imprime la cadena que esta dentro de la funcion
print('Hello',',', 'World','!') # Se puede agrupar diferentes cadenas o variables en una sola linea
print(len('Hello, World!')) # Imprime solo el numero de caracteres en la cadena 



# Imprimir las variables 

print('First name:', first_name)
print('First name length:', len(first_name))
print('Last name: ', last_name)
print('Last name length: ', len(last_name))
print('Country: ', country)
print('City: ', city)
print('Age: ', age)
print('Married: ', is_married)
print('Skills: ', skills)
print('Person information: ', person_info)



# Se puede configurar todas las variables en una sola linea 

first_name, last_name, country, age, is_married = 'Angel', 'Mtz C', 'Mx', 34, True

print(first_name, last_name, country, age, is_married)
print('First name:', first_name)
print('Last name: ', last_name)
print('Country: ', country)
print('Age: ', age)
print('Married: ', is_married)



# El usuario necesita introducir los datos 

first_name = input('What is your name: ')
age = input('How old are you? ')

print(first_name)
print(age)



"""     Convertir diferentes tipos de variables en otras

"""

# Entero a Flotante
num_int = 10
print('num_int',num_int)         # 10
num_float = float(num_int)
print('num_float:', num_float)   # 10.0

# Flotante a Entero
gravity = 9.81
print(int(gravity))             # 9

# Entero a Cadena
num_int = 10
print(num_int)                  # 10
num_str = str(num_int)
print(num_str)                  # '10'

# Cadena a Entero o Flotante
num_str = '10.6'
num_float = float(num_str)
print('num_float', float(num_str))  # 10.6
num_int = int(num_float)
print('num_int', int(num_int))      # 10

# Cadena a Lista
first_name = 'Abdul Gerardo Mtz Campos'
print(first_name)               # 'Abdul Gerardo Mtz Campos'
first_name_to_list = list(first_name)
print(first_name_to_list)            # ['A', 'b', 'd', 'u', 'l', ' ', 'G', 'e', 'r', 'a', 'r', 'd', 'o', ' ', 'M', 't', 'z', ' ', 'C', 'a', 'm', 'p', 'o', 's']















